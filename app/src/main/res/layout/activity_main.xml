<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Seleção de modo -->
    <RadioGroup
        android:id="@+id/radioGroupInputMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radioHandwriting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manuscrito"
            android:checked="true"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/radioKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teclado"
            android:textSize="18sp"
            android:layout_marginStart="24dp"/>
    </RadioGroup>

    <!-- Área de entrada (manuscrito / teclado) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp">

        <com.example.handwritingtospeech.HandwritingView
            android:id="@+id/handwritingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>

        <EditText
            android:id="@+id/editTextTyped"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Digite o texto aqui"
            android:visibility="gone"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:padding="12dp"/>
    </FrameLayout>

    <!-- Texto reconhecido -->
    <TextView
        android:id="@+id/txtRecognized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:gravity="center"
        android:minHeight="84dp"
        android:padding="12dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="12dp"/>

    <!-- Status da voz -->
    <TextView
        android:id="@+id/txtVoiceStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#888888"
        android:gravity="center"
        android:padding="10dp"
        android:text="Status da voz"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Wrapper para isolar o status + botões (isso evita sobreposição) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <ProgressBar
            android:id="@+id/progressModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            style="?android:attr/progressBarStyleHorizontal" />

        <TextView
            android:id="@+id/txtModelStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baixando modelo... (primeira vez)"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:background="#1976D2"
            android:visibility="gone" />

        <!-- Botões lado a lado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnSpeak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FALAR"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LIMPAR"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="#F44336" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>